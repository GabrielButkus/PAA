#include <stdio.h>

void ordenaCopos(int tamanho, int vetor[tamanho], int j, int i, int aux, int k);

int main(int argc, const char * argv[]) {
    int i=0, aux=0, n=0, k=1;
    char ans;
    do{
        printf("Digite um valor de n:\t");
        scanf("%d", &n);
        int j = (n*2) - 1;
        int copos[n*2];
        for(int i=0; i<(n*2); i++){
            if(i < n){
                copos[i] = 1;
            } else {
                copos[i] = 0;
            }
        }
        for(int i=0; i<(n*2); i++){
            printf("%d", copos[i]);
        }
        printf("\n");
        ordenaCopos((n*2), copos, j, i, aux, k);
        for(int i=0; i<(n*2); i++){
            printf("%d", copos[i]);
        }
        printf("\n");
        printf("Deseja continuar? (s/n): ");
        getchar();
        scanf("%c", &ans);
        printf("\n");
    } while(ans == 's');
    return 0;
}

void ordenaCopos(int tamanho, int vetor[tamanho], int j, int i, int aux, int k){
        if(k<=(int)tamanho/4){ // Custo 1 daqui para baixo
            j--; // 1
            i++; // 2
            aux = vetor[j]; // 3
            vetor[j] = vetor[i]; // 4
            vetor[i] = aux; // 5
            j--; // 6
            i++; // 7
            k++; // 8
            ordenaCopos(tamanho, vetor, j, i, aux, k); // 9
        }
}
